    <script>
    (function(){
    const reduce = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    const root = document.getElementById('about-brand-{{ section.id }}');
    const box  = document.getElementById('fixed-graph-{{ section.id }}');
    if (!root || !box) return;

    const cards = Array.from(root.querySelectorAll('.shape-card[data-shape]'));
    if (!cards.length) return;

    // shape name + symbol keyed by data-shape value (0..6)
    const labels  = {
        0:"Rags to Riches", 1:"From Bad to Worse", 2:"Man in Hole",
        3:"Icarus", 4:"Boy Meets Girl", 5:"Oedipus", 6:"Cinderella"
    };
    const symbols = {
        0:"↑", 1:"↓", 2:"↓↑", 3:"↑↓", 4:"↑↓↑", 5:"↓↑↓", 6:"→↑↓↑"
    };

    const titleEl = document.getElementById('fg-shape-title-{{ section.id }}');
    const sigilEl = document.getElementById('fg-shape-sigil-{{ section.id }}');

    // Map each card to the matching SVG path by its data-shape
    const shapePaths = cards.map(card => {
        const idx = card.dataset.shape;
        return document.getElementById(`fg-shape-${idx}-{{ section.id }}`);
    });

    let active = -1;
    let ticking = false;
    let visiblyOn = false;

    function computeVisible(){
        const shapes  = root.querySelector('#shapes')?.getBoundingClientRect();
        const example = root.querySelector('#example')?.getBoundingClientRect();
        if (!shapes) return false;
        const vh = window.innerHeight;
        const shapesInView   = (shapes.top < vh * 0.66) && (shapes.bottom > 220);
        const exampleArrives = example ? (example.top < vh * 0.35) : false;
        return shapesInView && !exampleArrives;
    }

    function applyVisible(v){
        visiblyOn = v;
        box.classList.toggle('is-visible', v);
        if (!v){
        if (titleEl) titleEl.style.opacity = '0';
        if (sigilEl) sigilEl.style.opacity = '0';
        shapePaths.forEach(p => { if (p) p.style.strokeDashoffset = '100'; });
        if (active >= 0 && cards[active]) cards[active].classList.remove('is-active');
        active = -1;
        }
    }

    function closestCardIndex(){
        const centerY = window.innerHeight * 0.45;
        let best = -1, bestDist = Infinity;
        cards.forEach((el, i) => {
        const r = el.getBoundingClientRect();
        const mid = r.top + r.height/2;
        const visible = r.bottom > 80 && r.top < window.innerHeight - 80;
        if (!visible) return;
        const d = Math.abs(mid - centerY);
        if (d < bestDist){ bestDist = d; best = i; }
        });
        return best;
    }

    function setActive(cardIdx){
        if (cardIdx === active || cardIdx < 0) return;

        if (active >= 0) cards[active].classList.remove('is-active');
        cards[cardIdx].classList.add('is-active');

        // reset strokes
        shapePaths.forEach(p => { if (p) p.style.strokeDashoffset = '100'; });

        // which shape is this?
        const shapeIdx = cards[cardIdx].dataset.shape;

        // animate the matching path
        const path = document.getElementById(`fg-shape-${shapeIdx}-{{ section.id }}`);
        if (!reduce && path) requestAnimationFrame(() => { path.style.strokeDashoffset = '0'; });

        // update title + sigil (arrows)
        if (titleEl){
        titleEl.textContent = labels[shapeIdx] || '';
        requestAnimationFrame(() => { titleEl.style.opacity = '1'; });
        }
        if (sigilEl){
        sigilEl.textContent = symbols[shapeIdx] || '';
        requestAnimationFrame(() => { sigilEl.style.opacity = '1'; });
        }

        active = cardIdx;
    }

    function tick(){
        const visNow = computeVisible();
        if (visNow !== visiblyOn) applyVisible(visNow);
        if (visiblyOn){
        const idx = closestCardIndex();
        if (idx >= 0) setActive(idx);
        }
        ticking = false;
    }

    function onScrollResize(){
        if (ticking) return;
        ticking = true;
        requestAnimationFrame(tick);
    }

    const sec = root.querySelector('#shapes');
    if (sec && 'IntersectionObserver' in window){
        const io = new IntersectionObserver(() => onScrollResize(), { threshold:[0,0.1,0.5,1] });
        io.observe(sec);
    }
    window.addEventListener('scroll', onScrollResize, { passive:true });
    window.addEventListener('resize', onScrollResize, { passive:true });
    onScrollResize();
    })();
    </script>





